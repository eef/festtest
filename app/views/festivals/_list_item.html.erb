<div class="col-sm-12 col-md-4">
  <div class="panel panel-default">
    <div class="panel-heading">
      <%= link_to festival.name, festival %>
    </div>
    <div class="panel-body">
      <%= festival.start.to_s(:short) %> - <%= festival.end.to_s(:short) %>
    </div>
    <div class="panel-footer">
      <div class="btn-group">
        <%= link_to 'View', festival, class: 'btn btn-default' %>
        <%= link_to 'Edit', edit_festival_path(festival), class: 'btn btn-default' %>
        <%= link_to 'Destroy', festival, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      </div>

    </div>
  </div>
</div>
